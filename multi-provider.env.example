# Multi-Provider AI Configuration Example
# Copy this to .env.local and configure your providers

# ==============================================
# PROVIDER PRIORITY CONFIGURATION
# ==============================================
# Comma-separated list of providers in priority order
# Available: bedrock, anthropic, nemo_local, openai
PROVIDER_PRIORITY=bedrock,anthropic,nemo_local,openai

# ==============================================
# AWS BEDROCK CONFIGURATION
# ==============================================
# Enable AWS Bedrock (Claude via AWS)
ENABLE_BEDROCK=true
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# ==============================================
# LOCAL NEMO CONFIGURATION
# ==============================================
# Enable local NVIDIA NeMo models (works with CPU/GPU)
ENABLE_LOCAL_NEMO=true
NEMO_MODEL_PATH=microsoft/DialoGPT-medium
NEMO_DEVICE=auto
NEMO_MAX_MEMORY_GB=8

# ==============================================
# ANTHROPIC CONFIGURATION (EXISTING)
# ==============================================
# Direct Anthropic API (your current setup)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ==============================================
# OPENAI CONFIGURATION (EXISTING)
# ==============================================
# OpenAI API (fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# ==============================================
# INTELLIGENT ROUTING CONFIGURATION
# ==============================================
# Route specific request types to optimal providers
SENSITIVE_PROVIDER=nemo_local
DASHBOARD_PROVIDER=bedrock
INCIDENT_PROVIDER=anthropic
BATCH_PROVIDER=nemo_local

# ==============================================
# QUOTA AND COST MANAGEMENT
# ==============================================
MAX_TOKENS_PER_REQUEST=600
MAX_REQUESTS_PER_MINUTE=60
MAX_COST_PER_HOUR=10.0
ENABLE_COST_TRACKING=true

# ==============================================
# FALLBACK AND RELIABILITY
# ==============================================
ENABLE_FALLBACKS=true
MAX_PROVIDER_RETRIES=3
RETRY_DELAY_SECONDS=1.0

# ==============================================
# FEATURE FLAGS (GRADUAL ROLLOUT)
# ==============================================
# Start with Bedrock only, then gradually enable others
MULTI_PROVIDER_ENABLED=true
BEDROCK_ROLLOUT_PERCENTAGE=100
NEMO_ROLLOUT_PERCENTAGE=0
